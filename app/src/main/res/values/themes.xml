<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Latte" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/latte_lavender</item>
        <item name="colorPrimaryVariant">@color/latte_teal</item>
        <item name="colorOnPrimary">@color/latte_white_100</item>
        <item name="android:textColor">@color/latte_white_100</item>
        <item name="backgroundColor">@color/latte_black_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/latte_teal</item>
        <item name="colorSecondaryVariant">@color/latte_sky</item>
        <item name="colorOnSecondary">@color/latte_black_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/virgil</item>
    </style>
